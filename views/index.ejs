<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
      integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
      crossorigin="anonymous"
    />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="/style.css" />
    <title>Weather App</title>
    <style>
      body {
        /* background-image: url("https://wallpapercave.com/wp/wp2998714.jpg"); */
        background-color: black;
      }
    </style>
  </head>

  <body>
    <div class="wrapper">
      <div class="widget-container">
        <div class="top-left">
          <h1 class="city" id="city"><i class="fa fa-map-marker" style="font-size:36px"></i> <%= citys %>,<%= countrys %></h1>
          <p id="date">SUNDAY | MAR 21 | 01:10 PM</p>
          <h1 id="temperature"><%=tempo %></h1>
          <h2 id="celsius">&degC</h2>
          <h5 id="minmax">Min: <%=mint%>&degC | Max: <%= maxt%>&degC</h5>
        </div>
        <div class="vertical-half-divider"></div>
        <div class="top-right">
          <img class="weather-icon" src="<%=icons%>" />
          <div class="key">
          <p id="feel">Feels like:</p>
          <p id="humidity">Humidity:</p>
          <p id="pressure">Pressure:</p>
          <p id="wind">WindSpeed:</p>
        </div>
        <div class="val">
          <p id="feels"><%=feels%> &degC</p>
          <p id="humid"><%=humid%>"Hg</p>
          <p id="press"><%=press%>mb</p>
          <p id="windspeed"><%=speed%> Km/h</p>
        </div>

        </div>
        <div class="horizontal-half-divider"></div>

        
          <form  action="/" method="post" >
            <div class="form-group"><label for="cityInput">Enter City Name: </label>
            <input
              class="form-control"
              id="cityInput"
              type="text"
              autocomplete="off"
              placeholder="New Delhi"
              name="cityName"
            />
          </div>
            <button class="btn btn-dark" type="submit" name="submit">
              Search
            </button>

            <div class="errors"> <%=error%> </err></div>
          </form>
    
      </div>
    </div>
    <script>
      const curDate = document.getElementById("date");
    
//   
      const getDate = () => {
        // let currentTime= new Date();
        var weekday = ["Sun", "Mon", "Tue", "Wed", "Thur", "Fri", "Sat"];
        let curTime = new Date();
        let day = weekday[curTime.getDay()];
        return day;
      };

      const getTime = () => {
        var months = [
          "Jan",
          "Feb",
          "Mar",
          "Apr",
          "May",
          "June",
          "July",
          "Aug",
          "Sept",
          "Oct",
          "Nov",
          "Dec",
        ];
        let now = new Date();
        let month = months[now.getMonth()];
        let day = now.getDate();
        let hours = now.getHours();
        let mins = now.getMinutes();
        let ampm = "AM";
        if (hours > 11) {
          ampm = "PM";
          if (hours > 12) hours -= 12;
        }
        if (mins < 10) {
          mins = "0" + mins;
        }
        return `${month} ${day} | ${hours}:${mins} ${ampm}`;
      };
      curDate.innerHTML = getDate() + " | " + getTime();
    </script>
